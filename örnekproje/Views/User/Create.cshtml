@model örnekproje.Models.User




<div class="container mt-4">
    <h3 class="mb-4">Yeni Kullanıcı Ekle</h3>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" asp-controller="User" method="post">
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input asp-for="FirstName" type="text" class="form-control required" placeholder="Kullanıcı adını giriniz">
                </div>
                <div class="form-group">
                    <label>Kullanıcı Soyad</label>
                    <input asp-for="LastName" type="text" class="form-control required" placeholder="Kullanıcı soyadını giriniz">
                </div>
                <div class="form-group">
                    <label>Kullanıcı Yaş</label>
                    <input asp-for="Yas" type="text" class="form-control required" placeholder="Kullanıcı Yaşını giriniz">
                </div>

                <div class="form-group">
                    <label>E-Mail</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="E-mail">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                </div>

                <div class="form-group">
                    <label>Telefon numarası</label>
                    <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Telefon Numarası">
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    <input asp-for="Address" type="text" class="form-control" placeholder="Adres">
                </div>
                <div class="form-group">
                    <label>Şehir</label>
                    <input asp-for="City" type="text" class="form-control" placeholder="Şehir">
                </div>
                <div class="form-group">
                    <label>Posta Kodu</label>
                    <input asp-for="PostalCode" type="number" class="form-control" placeholder="Posta Kodu">
                </div>
                
                <div class="form-group form-check form-switch mt-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveSwitch">
                    <label class="form-check-label" for="isActiveSwitch">Aktif mi?</label>
                </div>
               



                <button type="submit" class="btn btn-primary">Ekle</button>
                <a href="@Url.Action("Kullanicilar", "User")" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>
